# =============================================================================
# Faceless YouTube Factory - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DB_USER=youtube_factory
DB_PASSWORD=your_secure_password_here
DB_NAME=youtube_factory
DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@localhost:5432/${DB_NAME}

# =============================================================================
# GROQ API (for LLM script generation)
# =============================================================================
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_MAX_TOKENS=30768
GROQ_TEMPERATURE=0.7

# =============================================================================
# GOOGLE OAUTH (for YouTube API)
# =============================================================================
# Create credentials at: https://console.cloud.google.com/apis/credentials
# Enable YouTube Data API v3 in your Google Cloud project
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# OAuth redirect URI (must match what's configured in Google Cloud Console)
OAUTH_REDIRECT_URI=http://localhost:3000/youtube/callback

# =============================================================================
# TOKEN ENCRYPTION
# =============================================================================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
TOKEN_ENCRYPTION_KEY=your_fernet_encryption_key_here

# =============================================================================
# FRONTEND
# =============================================================================
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=http://localhost:3000

# =============================================================================
# APPLICATION
# =============================================================================
DEBUG=true
